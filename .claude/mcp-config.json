{
  "description": "MCP Server Configuration for SuperClaude Genie Interactive Docs",
  "servers": {
    "context7": {
      "name": "Context7 Documentation Access",
      "description": "Provides access to library documentation and contextual information",
      "command": "context7-mcp",
      "capabilities": [
        "Documentation lookup",
        "Context-aware assistance",
        "Library reference access"
      ],
      "status": "active"
    },
    "code-reasoning": {
      "name": "Code Reasoning & Sequential Processing",
      "description": "Enhanced MCP server for multi-step reasoning and systematic thinking",
      "command": "node /usr/local/lib/node_modules/@mettamatt/code-reasoning/dist/index.js",
      "capabilities": [
        "Sequential thinking",
        "Code analysis",
        "Problem-solving workflows",
        "Systematic reasoning",
        "Debugging assistance"
      ],
      "status": "active"
    },
    "magic": {
      "name": "Magic UI Components",
      "description": "AI-generated UI components for interactive documentation",
      "command": "magic",
      "capabilities": [
        "UI component generation",
        "Interactive element creation",
        "Frontend automation",
        "React/HTML output"
      ],
      "status": "active"
    },
    "playwright": {
      "name": "Playwright Browser Automation",
      "description": "Browser testing and automation for documentation validation",
      "command": "mcp-server-playwright",
      "capabilities": [
        "Browser automation",
        "End-to-end testing",
        "Web scraping",
        "Screenshot capture",
        "Performance testing"
      ],
      "status": "active"
    },
    "browser": {
      "name": "Browser MCP",
      "description": "Alternative browser control and automation",
      "command": "mcp-server-browsermcp",
      "capabilities": [
        "Browser control",
        "Web automation",
        "DOM manipulation"
      ],
      "status": "active"
    }
  },
  "configuration": {
    "transport": "stdio",
    "environment": "development",
    "logging": {
      "level": "info",
      "output": "console"
    },
    "security": {
      "allow_network": true,
      "allow_filesystem": true,
      "sandbox": false
    }
  },
  "integration": {
    "claude_code": {
      "permissions_updated": true,
      "settings_path": ".claude/settings.local.json"
    },
    "desktop_config": {
      "path": "~/.config/claude-desktop/claude_desktop_config.json",
      "configured": true
    }
  }
}